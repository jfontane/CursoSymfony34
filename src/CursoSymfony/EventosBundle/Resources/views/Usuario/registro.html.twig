{% extends "@CursoSymfonyEventos/layout.html.twig" %}
{% block title %}Registro{% endblock %}
{% block metadesc %}Regístrate y participa{% endblock %}
{% block pageid 'registro' %}
    {% block contenido %}
        <h1>Registro</h1>
        {{ form_errors(form) }}
        {{ form_start(form) }}
        {{ form_errors(form.nombre) }}
        <p>
            {{ form_label(form.nombre) }}
            {{ form_widget(form.nombre) }}
        </p>
        {{ form_errors(form.apellidos) }}
        <p>
            {{ form_label(form.apellidos) }}
            {{ form_widget(form.apellidos) }}
        </p>
        {{ form_errors(form.email) }}
        <p>
            {{ form_label(form.email) }}
            {{ form_widget(form.email) }}
        </p>
        <div class="grid_6 alpha">
            {{ form_errors(form.dni) }}
            <p>
                {{ form_label(form.dni) }}
                {{ form_widget(form.dni) }}
            </p>
        </div>
        <div class="grid_6 omega">
            {{ form_errors(form.telefono) }}
            <p>
                {{ form_label(form.telefono) }}
                {{ form_widget(form.telefono) }}
            </p>
        </div>
        {{ form_errors(form.direccion) }}
        <p>
            {{ form_label(form.direccion) }}
            {{ form_widget(form.direccion) }}
        </p>
        <div class="grid_6 alpha">
            {{ form_errors(form.password.first) }}
            <p>
                {{ form_label(form.password.first, 'Clave') }}
                {{ form_widget(form.password.first) }}
            </p>
        </div>
        <div class="grid_6 omega">
            {{ form_errors(form.password.second) }}
            <p>
                {{ form_label(form.password.second, 'Repetir clave') }}
                {{ form_widget(form.password.second) }}
            </p>
        </div>
        {{ form_end(form) }}
    {% endblock %}
    {% block lateral %}
        <div class="usuario">
            <p>¿Ya estás registrado? <a href="#RUTA_A_LOGIN">Login</a></p>
        </div>
        <h3>¿Por qué asistir?</h3>
